<Window x:Class="Bottlepool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bottlepool"
        mc:Ignorable="d"
        Title="BottlePool" Height="350" Width="525" Icon="img/liverpool_icon.ico">
    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="ImageButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Height="325" MinWidth="520" MinHeight="325">
        <Button x:Name="livButton" Click="livButton_Click" Height="202" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" MaxHeight="202" MaxWidth="202" Background="#FFF1F1F3" BorderBrush="#FFEA3D3D" BorderThickness="5">
            <Image Source="img/Liverpool.jpg" HorizontalAlignment="Center" Height="196" VerticalAlignment="Center" Width="204"/>
        </Button>

    </Grid>
</Window>
